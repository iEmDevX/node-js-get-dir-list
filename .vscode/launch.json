{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch NodeJs TS Debug",
            "type": "node",
            "request": "launch",
            "protocol": "inspector",
            "cwd": "${workspaceRoot}",
            "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/ts-node-dev",
            "args": [
                "${workspaceRoot}/src/server.ts"
            ],
            "restart": true
        }
    ]
}